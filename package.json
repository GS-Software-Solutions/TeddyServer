{
    "name": "teddy-server",
    "version": "1.0.0",
    "description": "Teddy Chat API Server",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "watch": "tsc -w",
        "example": "ts-node src/example-usage.ts",
        "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
        "prepare": "husky"
    },
    "lint-staged": {
        "src/**/*.{ts,js,json,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "axios": "^1.6.7",
        "dayjs": "^1.11.10",
        "dotenv": "^16.4.1"
    },
    "devDependencies": {
        "@types/node": "^20.11.19",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "prettier": "^3.5.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
} 